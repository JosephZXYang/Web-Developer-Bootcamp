<h1>
	You fell in love with: <%= thingVar %>!
</h1>

<!-- Useful variables -->
<% var best_choice = ["dota", "dota2"]; %>
<% var ok_choice = ["league", "leagueoflegends"]; %>

<% var input = thingVar.toLowerCase(); %>

<% if (best_choice.includes(input)) { %>
	<p>
		Great! You made the best choice! DotA is the best!
	</p>

<%} else if (ok_choice.includes(input)) { %>
	<p>
		League of Legends is a great MOBA game! But DotA is the best!
	</p>

<% } else {%> 
	<p>
		Why not fall in love with a great popular MOBA game?
	</p>
<% }%>

<p>
	P.S. this is the love.ejs file
</p>